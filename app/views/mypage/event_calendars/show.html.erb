<div class="card mb-3">
  <div class="card-header">
    <i class="bi bi-person"></i>
    カレンダー
  </div>
  <div class="card-body">
    <div id="calendar"></div>
  </div>
</div>

<ul class="nav nav-lb-tab mb-6" id="tab" role="tablist">
  <li class="nav-item ms-0" role="presentation">
    <a class="nav-link active " id="bookmarked-tab" data-bs-toggle="pill" href="#bookmarked" role="tab" aria-controls="bookmarked" aria-selected="true">ブックマーク</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="currentlyLearning-tab" data-bs-toggle="pill" href="#currentlyLearning" role="tab" aria-controls="currentlyLearning" aria-selected="false">参加予定</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="path-tab" data-bs-toggle="pill" href="#path" role="tab" aria-controls="path" aria-selected="false">参加済み</a>
  </li>
</ul>
<!-- Tab content -->
<div class="tab-content" id="tabContent">
  <div class="tab-pane fade show active" id="bookmarked" role="tabpanel" aria-labelledby="bookmarked-tab">
    <div class="row row-cols-1 row-cols-md-3 g-4 mb-3">
      <%= render partial: 'events/event', collection: @bookmark_events %>
    </div>
  </div>
  <div class="tab-pane fade" id="currentlyLearning" role="tabpanel" aria-labelledby="currentlyLearning-tab">
    <div class="row row-cols-1 row-cols-md-3 g-4 mb-3">
      <%= render partial: 'events/event', collection: @future_events %>
    </div>
  </div>
  <!-- Past -->
  <div class="tab-pane fade" id="path" role="tabpanel" aria-labelledby="path-tab">
    <div class="row row-cols-1 row-cols-md-3 g-4 mb-3">
      <%= render partial: 'events/event', collection: @past_events %>
    </div>
  </div>
</div>
